    <div class="template-details">
        <div class="sidebar">
            <!-- Other form fields -->
            <label for="businessName">Business Name:</label>
            <input type="text" id="businessName" maxlength="100" />
            <label for="targetAudience">Target Audience:</label>
            <textarea id="targetAudience" maxlength="600"></textarea>
            <label for="num_variations">Number of Variations:</label>
            <input type="number" id="num_variations">

            <button id="generate">Generate</button>
        </div>

        <div class="content" id="content">
            <!-- Content generated by GPT will be displayed here -->
        </div>    
    </div>


<!-- ... -->

<script>
    document.getElementById('generate').addEventListener('click', async () => {
        const businessName = document.getElementById('businessName').value;
        const targetAudience = document.getElementById('targetAudience').value;
        const num_variations = document.getElementById('num_variations').value;

        const response = await fetch('/emailCampaignIdeas', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                businessName: businessName,
                targetAudience: targetAudience,
                num_variations: num_variations
            }),
        });

        if (response.ok) {
            const data = await response.json();
            const contentArea = document.getElementById('content');
            contentArea.innerHTML = '';

            data.generatedContent.forEach((content, index) => {
                const newContentDiv = document.createElement('div');
                newContentDiv.className = 'email-campaign-idea-card';
                newContentDiv.innerHTML = `<h2>Idea ${index + 1}</h2>${content}`;
                contentArea.appendChild(newContentDiv);
            });
        }
    });
</script>

