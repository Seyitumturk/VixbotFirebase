<script>
    //Expand Collapse main sidebar 
    const expandButton = document.getElementById('expand');
    const bigSidebar = document.getElementById('bigSidebar');

    let isHovered = false; // This will track if the mouse is over the sidebar

    expandButton.addEventListener('click', function (e) {
        e.stopPropagation();
        if (bigSidebar.style.transform === 'translateX(-100%)' || bigSidebar.style.transform === '') {
            bigSidebar.style.transform = 'translateX(0)';
        } else {
            bigSidebar.style.transform = 'translateX(-100%)';
        }
    });

    const closeButton = document.getElementById('closeSidebar');

    closeButton.addEventListener('click', function (e) {
        e.stopPropagation();
        bigSidebar.style.transform = 'translateX(-100%)';
    });

    document.body.addEventListener('click', function () {
        if (!isHovered && bigSidebar.style.transform === 'translateX(0)') {
            bigSidebar.style.transform = 'translateX(-100%)';
        }
    });

    bigSidebar.addEventListener('mouseover', function () {
        isHovered = true;
    });

    bigSidebar.addEventListener('mouseout', function () {
        isHovered = false;
    });

</script>


