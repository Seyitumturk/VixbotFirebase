<script>
    document.getElementById('generate').addEventListener('click', async () => {
        const businessName = document.getElementById('businessName').value;
        const businessIndustry = document.getElementById('businessIndustry').value;
        const num_variations = document.getElementById('num_variations').value;

        const response = await fetch('/socialMediaPlan', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                businessName: businessName,
                businessIndustry: businessIndustry,
                num_variations: num_variations
            }),
        });

        if (response.ok) {
            const data = await response.json();
            const contentArea = document.getElementById('content');
            contentArea.innerHTML = '';

            data.generatedContent.forEach((content, index) => {
                const newContentDiv = document.createElement('div');
                newContentDiv.className = 'social-media-plan-card';
                newContentDiv.innerHTML = `<h2>Plan ${index + 1}</h2>${content}`;
                contentArea.appendChild(newContentDiv);
            });
        }
    });
</script>

